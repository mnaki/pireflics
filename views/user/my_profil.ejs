<div class="row">
    <div class="col-md-12">
        <h2>
            <%= req.session.user['firstname']+ ' '+ req.session.user['lastname'] %>
            <small><a href="#" data-toggle="modal" data-target=".edit-profil"><i class="glyphicon glyphicon-edit"></i></a></small>
        </h2>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-8">
        <div class="img-block">
            <img src="<%= req.session.user['image'] != null ? req.session.user['image'] : '../images/defaultprofil.gif'%>" class="img-thumbnail">
        </div>
        <button data-toggle="modal" data-target=".edit_avatar" class="btn"><%= __('Add one picture')%></button>
    </div>
</div>



<!-- Formulaire d upload de photo -->
<div class="modal fade edit_avatar" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title"><%= __('Add one picture')%></h4>
            </div>
            <form method="post" action="/update_picture">
                <div class="modal-body">
                        <input type="url" name="picture" class="form-control" placeholder="http://exemple.com/exemple.jpeg">
                </div>
                <div class="modal-footer">
                    <input type="submit" value="<%= __('Send')%>">
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal fade edit-profil" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title"><%= __('Edit info')%></h4>
            </div>
            <div class="modal-body">
                <form method="post" action="/update_info">
                    <label><%= __('Firstname')%> :</label>
                    <input name="firstname" value="<%= req.session.user['firstname'] %>" type="text" class="form-control input-sm" placeholder="Jacky">
                    <label><%= __('Lastname')%> :</label>
                    <input name="lastname"  value="<%= req.session.user['lastname'] %>" type="text" class="form-control input-sm" placeholder="Dupond">
                    <label><%= __('Email')%> :</label>
                    <input name="email"  value="<%= req.session.user['email'] %>" type="email" class="form-control input-sm" placeholder="jdupond@mail.com">
            </div>
            <div class="modal-footer">
                <div class="col-md-12 valider">
                    <button type="submit" class="btn btn-primary btn-lg btn-block"><%= __('Send')%></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>