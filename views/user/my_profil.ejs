<div class="row">
    <div class="col-md-12">
        <h2>
            <%= req.session.user['firstname']+ ' '+ req.session.user['lastname'] %>
            <small><a href="#" data-toggle="modal" data-target=".edit-profil"><i class="glyphicon glyphicon-edit"></i></a></small>
        </h2>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-8">
        <div class="img-block">
            <img src="<%= req.session.user['image'] != null ? req.session.user['image'] : '../images/defaultprofil.gif'%>" class="img-thumbnail">
        </div>
        <button data-toggle="modal" data-target=".edit_avatar" class="btn">Ajouter une photo</button>
    </div>
</div>



<!-- Formulaire d upload de photo -->
<div class="modal fade edit_avatar" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Ajouter une photo</h4>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" method="post" action="#">
                    <input type="url" name="picture" class="form-control" placeholder="http://exemple.com/exemple.jpeg">
            </div>
            <div class="modal-footer">
                <input type="submit" value="Envoyer">
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade edit-profil" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Modifier mes informations</h4>
            </div>
            <div class="modal-body">
                <form method="post" action="<?= $this->base_url()?>user/edit_profil">
                    <label>Firstname :</label>
                    <input name="prenom" value="<%= req.session.user['firstname'] %>" type="text" class="form-control input-sm" placeholder="Jacky">
                    <label>Lastname :</label>
                    <input name="nom"  value="<%= req.session.user['lastname'] %>" type="text" class="form-control input-sm" placeholder="Dupond">
                    <label>Email :</label>
                    <input name="email"  value="<%= req.session.user['email'] %>" type="email" class="form-control input-sm" placeholder="jdupond@mail.com">
            </div>
            <div class="modal-footer">
                <div class="col-md-12 valider">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>