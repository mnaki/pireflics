<div class="col-md-12">
    <link href="//vjs.zencdn.net/5.8/video-js.min.css" rel="stylesheet">
    <script src="//vjs.zencdn.net/5.8/video.min.js"></script>

    <video id="really-cool-video" class="video-js vjs-default-skin" controls
           preload="auto" poster="<%= video.poster_path %>" data-setup='{}'>
      <source src="" type=""><!-- TODO -->
      <p class="vjs-no-js">
          To view this video please enable JavaScript, and consider upgrading to a web browser
          that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
      </p>
    </video>
</div>
<div class="col-md-12">
    <h4><%= __('Comments')%></h4>
    <% comments.forEach(function(comment) {%>
    <div class="comment-block">
        <p>
            <small><%= comment.user_id %> <%= __('said') %> :</small>
            <%= comment.comment %>
        </p>
    </div>
    <%})%>

    <% if(req.session.user){ %>
    <form method="post" action="/movie/add_comment/<%= video.id %>">
        <div class="input-group">
            <input type="text" name="comment" class="form-control" placeholder="<%= __('Your comment') %>" aria-describedby="basic-addon1">
            <span class="input-group-btn">
        <button class="btn btn-default" type="submit"><%= __('Send') %></button>
      </span>
        </div>
    </form>
    <% } %>
</div>
