<div class="col-sm-12">

	<form class="searchform" action="" method="get">
		<div class="input-group">
			<div class="input-group-btn">
			<!-- Button and dropdown menu -->
			<input type="submit" class="btn btn-default" name="submit" value="Go!">
			</div>
			<input autofocus class='movieName form-control' type="text" name="name" value="" placeholder="Warcraft" class="form-control" aria-label="movie-name">
		</div>
		<br>
		<div class="form-group">
			<label for="sortby"><%= __('Sort by') %> : </label>
			<select class="form-control" id="sortby">
				<option value="popularity"><%= __('Popularity')%></option>
				<option value="title"><%= __('Name')%></option>
				<option value="release_date"><%= __('Release date')%></option>
				<option value="vote_average"><%= __('Average rating')%></option>
			</select>
		</div>
		<div class="form-group">
			<label for="order"><%= __('Order by')%> : </label>
			<select class="form-control" id="order">
				<option value="desc"><%= __('Descending')%></option>
				<option value="asc"><%= __('Ascending')%></option>
			</select>
		</div>
	</form>

	<div class="row video-list">
	</div>

	<script type="text/javascript" src='/js/movie.js'></script>

	<a class='btn btn-default' href="javascript:nextPage()"><%= __('Next page')%></a>

</div>
